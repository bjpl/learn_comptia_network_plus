# =================================
# PRODUCTION ENVIRONMENT VARIABLES
# =================================
#
# ⚠️  CRITICAL SECURITY NOTES:
# 1. Replace ALL values with generated secrets
# 2. NEVER commit this file with real values
# 3. Each environment needs UNIQUE secrets
# 4. Store secrets in secure password manager
# =================================

# Node Environment
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://[DB_USER]:[DB_PASSWORD]@[DB_HOST]:5432/[DB_NAME]
DB_HOST=your-db-host.com
DB_PORT=5432
DB_USER=[GENERATED]
DB_PASSWORD=[GENERATED]
DB_NAME=[GENERATED]
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=30000

# JWT Authentication
JWT_SECRET=[GENERATED - 32 chars]
JWT_EXPIRATION=15m
REFRESH_TOKEN_SECRET=[GENERATED - 32 chars]
REFRESH_TOKEN_EXPIRATION=7d
JWT_ALGORITHM=HS256

# Session Configuration
SESSION_SECRET=[GENERATED - 64 chars]
SESSION_DURATION=86400000
SESSION_NAME=comptia_session
COOKIE_SECRET=[GENERATED - 32 chars]
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Encryption
ENCRYPTION_KEY=[GENERATED - 64 chars]
ENCRYPTION_ALGORITHM=aes-256-gcm

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CSRF_SECRET=[GENERATED - 64 chars]
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800000

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# API Keys
API_KEY=[GENERATED - 32 chars]
ADMIN_API_KEY=[GENERATED - 32 chars]

# Email Service (Optional - Choose one)
# SendGrid
SENDGRID_API_KEY=[GET_FROM_SENDGRID]
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=CompTIA Network+ Platform

# SMTP Alternative
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-user
SMTP_PASSWORD=[GET_FROM_PROVIDER]

# Cloud Storage (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=[GET_FROM_AWS]
AWS_SECRET_ACCESS_KEY=[GET_FROM_AWS]
S3_BUCKET_NAME=[GENERATED]
CLOUDFRONT_DOMAIN=cdn.yourdomain.com

# Redis (Optional - for session storage)
REDIS_URL=redis://[REDIS_HOST]:6379
REDIS_PASSWORD=[GENERATED]
REDIS_TLS=true
REDIS_DB=0
REDIS_PREFIX=comptia:

# Monitoring & Analytics (Optional)
SENTRY_DSN=[GET_FROM_SENTRY]
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
GOOGLE_ANALYTICS_ID=[GET_FROM_GOOGLE]

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/comptia-network/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Application URLs
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://admin.yourdomain.com

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR=false
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_HELMET=true

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Performance
COMPRESSION_ENABLED=true
GZIP_LEVEL=6
CACHE_CONTROL_MAX_AGE=3600

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
