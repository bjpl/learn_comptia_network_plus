# Smart pre-commit hook - gracefully handles WSL node_modules issues
# CI will always run full validation as backup

if [ -f "node_modules/.bin/eslint" ]; then
  npx lint-staged
else
  echo "⚠️  Skipping lint-staged (node_modules not fully installed)"
  echo "   CI will validate changes. Run 'npm install' to enable local checks."
fi
